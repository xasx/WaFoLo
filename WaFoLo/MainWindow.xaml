<mah:MetroWindow x:Class="WaFoLo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaFoLo"
        mc:Ignorable="d"
        Title="Watchdog Log Monitor" Height="450" Width="700"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Watchdog Log Monitor" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button x:Name="ToggleConfigButton" Content="Show Configuration" Click="ToggleConfig_Click" 
                    HorizontalAlignment="Right" VerticalAlignment="Center" Padding="10,5"/>
        </Grid>

        <GroupBox x:Name="ConfigGroupBox" Header="Configuration" Grid.Row="1" Padding="10" Margin="0,0,0,10" Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Log File:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding LogFilePath}" TextWrapping="Wrap" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Trigger Pattern:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TriggerPattern}" TextWrapping="Wrap" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Expected Pattern:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ExpectedPattern}" TextWrapping="Wrap" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Timeout:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding TimeoutDisplay}" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Mode:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="ModeText" Text="{Binding ModeDisplay}" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="Timestamp Format:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding LogTimestampFormat}" TextWrapping="Wrap" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="6" Grid.Column="0" Text="Timestamp Position:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding LogTimestampPosition}" Margin="0,0,0,5"/>
                
                <TextBlock Grid.Row="7" Grid.Column="0" Text="Monitored Process:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding MonitoredProcessNameDisplay}" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="8" Grid.Column="0" Text="Wait for Process:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding WaitForProcessDisplay}" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="9" Grid.Column="0" Text="Process Check Interval:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="9" Grid.Column="1" Text="{Binding ProcessCheckIntervalDisplay}" Margin="0,0,0,5"/>
                
                <TextBlock Grid.Row="10" Grid.Column="0" Text="Auto-Close on Success:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="10" Grid.Column="1" Text="{Binding AutoCloseOnSuccessDisplay}" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="11" Grid.Column="0" Text="Auto-Close Delay:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="11" Grid.Column="1" Text="{Binding AutoCloseDelayDisplay}" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="12" Grid.Column="0" Text="Restart Process on Timeout:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="12" Grid.Column="1" Text="{Binding RestartProcessOnTimeoutDisplay}" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="13" Grid.Column="0" Text="Restart Process Delay:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="13" Grid.Column="1" Text="{Binding RestartProcessDelayDisplay}" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="14" Grid.Column="0" Text="Max Restart Attempts:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="14" Grid.Column="1" Text="{Binding MaxRestartAttemptsDisplay}" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="15" Grid.Column="0" Text="Process Restart Command:" FontWeight="SemiBold"/>
                <TextBlock Grid.Row="15" Grid.Column="1" Text="{Binding ProcessRestartCommandDisplay}" TextWrapping="Wrap"/>

            </Grid>
        </GroupBox>

        <GroupBox Header="Status" Grid.Row="2" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock x:Name="StatusTextBlock" Text="Initializing..." FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="LastTriggerTextBlock" Text="Waiting for trigger..." Margin="0,0,0,5"/>
                <ProgressBar x:Name="TimeoutProgressBar" Height="20" Minimum="0" Maximum="100" Visibility="Collapsed" Margin="0,5,0,0"/>
                <TextBlock x:Name="TimeoutCountdownText" Text="" HorizontalAlignment="Center" Visibility="Collapsed" Margin="0,2,0,0"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Activity Log" Grid.Row="3" Padding="10" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="ActivityLogTextBox" Text="{Binding ActivityLog, Mode=OneWay}" IsReadOnly="True" TextWrapping="Wrap" 
                         BorderThickness="0" Background="Transparent" FontFamily="Consolas" FontSize="11"/>
            </ScrollViewer>
        </GroupBox>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="AbortButton" Content="ABORT SHUTDOWN" 
                    Click="AbortShutdown_Click" Padding="20,10" FontSize="14" FontWeight="Bold"
                     Visibility="Collapsed"
                    Margin="0,0,10,0"/>
            <Button x:Name="CloseButton" Content="CLOSE APPLICATION" 
                    Click="Close_Click" Padding="20,10" FontSize="14" FontWeight="Bold"
                    Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
