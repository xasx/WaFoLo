<mah:MetroWindow
    x:Class="WaFoLo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WaFoLo"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Watchdog Log Monitor"
    Width="700"
    Height="450"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,15">
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Text="Watchdog Log Monitor" />
            <Button
                x:Name="ToggleConfigButton"
                Padding="10,5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Click="ToggleConfig_Click"
                Content="Show Configuration" />
        </Grid>

        <GroupBox
            x:Name="ConfigGroupBox"
            Grid.Row="1"
            Margin="0,0,0,10"
            Padding="10"
            Header="Configuration"
            Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Log File:" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    Text="{Binding LogFilePath}"
                    TextWrapping="Wrap" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Trigger Pattern:" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    Text="{Binding TriggerPattern}"
                    TextWrapping="Wrap" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Expected Pattern:" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    Text="{Binding ExpectedPattern}"
                    TextWrapping="Wrap" />

                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Timeout:" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    Text="{Binding TimeoutDisplay}" />

                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Mode:" />
                <TextBlock
                    x:Name="ModeText"
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    Text="{Binding ModeDisplay}" />

                <TextBlock
                    Grid.Row="5"
                    Grid.Column="0"
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Timestamp Format:" />
                <TextBlock
                    Grid.Row="5"
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    Text="{Binding LogTimestampFormat}"
                    TextWrapping="Wrap" />

                <TextBlock
                    Grid.Row="6"
                    Grid.Column="0"
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Timestamp Position:" />
                <TextBlock
                    Grid.Row="6"
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    Text="{Binding LogTimestampPosition}" />

                <TextBlock
                    Grid.Row="7"
                    Grid.Column="0"
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Monitored Process:" />
                <TextBlock
                    Grid.Row="7"
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    Text="{Binding MonitoredProcessNameDisplay}" />

                <TextBlock
                    Grid.Row="8"
                    Grid.Column="0"
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Wait for Process:" />
                <TextBlock
                    Grid.Row="8"
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    Text="{Binding WaitForProcessDisplay}" />

                <TextBlock
                    Grid.Row="9"
                    Grid.Column="0"
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Process Check Interval:" />
                <TextBlock
                    Grid.Row="9"
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    Text="{Binding ProcessCheckIntervalDisplay}" />

                <TextBlock
                    Grid.Row="10"
                    Grid.Column="0"
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Auto-Close on Success:" />
                <TextBlock
                    Grid.Row="10"
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    Text="{Binding AutoCloseOnSuccessDisplay}" />

                <TextBlock
                    Grid.Row="11"
                    Grid.Column="0"
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Auto-Close Delay:" />
                <TextBlock
                    Grid.Row="11"
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    Text="{Binding AutoCloseDelayDisplay}" />

                <TextBlock
                    Grid.Row="12"
                    Grid.Column="0"
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Restart Process on Timeout:" />
                <TextBlock
                    Grid.Row="12"
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    Text="{Binding RestartProcessOnTimeoutDisplay}" />

                <TextBlock
                    Grid.Row="13"
                    Grid.Column="0"
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Restart Process Delay:" />
                <TextBlock
                    Grid.Row="13"
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    Text="{Binding RestartProcessDelayDisplay}" />

                <TextBlock
                    Grid.Row="14"
                    Grid.Column="0"
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Max Restart Attempts:" />
                <TextBlock
                    Grid.Row="14"
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    Text="{Binding MaxRestartAttemptsDisplay}" />

                <TextBlock
                    Grid.Row="15"
                    Grid.Column="0"
                    FontWeight="SemiBold"
                    Text="Process Restart Command:" />
                <TextBlock
                    Grid.Row="15"
                    Grid.Column="1"
                    Text="{Binding ProcessRestartCommandDisplay}"
                    TextWrapping="Wrap" />

            </Grid>
        </GroupBox>

        <GroupBox
            Grid.Row="2"
            Margin="0,0,0,10"
            Padding="10"
            Header="Status">
            <StackPanel>
                <TextBlock
                    x:Name="StatusTextBlock"
                    Margin="0,0,0,5"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Initializing..." />
                <TextBlock
                    x:Name="LastTriggerTextBlock"
                    Margin="0,0,0,5"
                    Text="Waiting for trigger..." />
                <ProgressBar
                    x:Name="TimeoutProgressBar"
                    Height="20"
                    Margin="0,5,0,0"
                    Maximum="100"
                    Minimum="0"
                    Visibility="Collapsed" />
                <TextBlock
                    x:Name="TimeoutCountdownText"
                    Margin="0,2,0,0"
                    HorizontalAlignment="Center"
                    Text=""
                    Visibility="Collapsed" />
            </StackPanel>
        </GroupBox>

        <GroupBox
            Grid.Row="3"
            Margin="0,0,0,10"
            Padding="10"
            Header="Activity Log">

            <TextBox
                x:Name="ActivityLogTextBox"
                Background="Transparent"
                BorderThickness="0"
                FontFamily="Consolas"
                FontSize="11"
                IsReadOnly="True"
                Text="{Binding ActivityLog, Mode=OneWay}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />

        </GroupBox>

        <StackPanel
            Grid.Row="4"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="AbortButton"
                Margin="0,0,10,0"
                Padding="20,10"
                Click="AbortShutdown_Click"
                Content="ABORT SHUTDOWN"
                FontSize="14"
                FontWeight="Bold"
                Visibility="Collapsed" />
            <Button
                x:Name="CloseButton"
                Padding="20,10"
                Click="Close_Click"
                Content="CLOSE APPLICATION"
                FontSize="14"
                FontWeight="Bold"
                Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</mah:MetroWindow>
